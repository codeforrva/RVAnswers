<div class="row">
  <div class="span11 center">
    <div class="main-content">
      <div class="header">
        <%= content_tag(:h1, "All Categories") %>
        <ul class="categories">
          <% @categories.each do |category| %>
            <li class="category-listing">
              <%= content_tag(:h1, link_to(category.name,category))%>
              <p><%= category.description %></p>
            </li>
          <% end -%>
        </ul>

      </div>
    </div>
  </div>
</div>
